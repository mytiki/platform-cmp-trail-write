{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": ["standard", "prettier"],
    "plugins": ["prettier"],
    "overrides": [
        {
            "files": ["test/**"],
            "plugins": ["jest"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error"]
    }
}
